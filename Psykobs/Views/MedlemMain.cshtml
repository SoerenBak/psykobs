@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.MedlemMain>
@using ContentModels = Umbraco.Web.PublishedModels;
@using Umbraco.Web;

@{
	Layout = "master.cshtml";
}

@{
	var selectionMedlemmer = Model.AncestorOrSelf("medlemMain")
	.ChildrenOfType("medlemItem")
	.Where(x => x.IsVisible());

}


<content>
	<section class="article">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 spacing">
					<div>
						<h2>@Model.Name</h2>
						<p>Medlemmerne repræsenteret her er dem, som har en fast post i styregrupperne. Begge lokalafdelinger har en del flere medlemmer, som fungerer som ”aktive uansvarlige”, som altså underviser og ligger et kæmpe arbejde i dette. Det skal understreges, at man kan gøre hvad man har lyst til her, og at have en plads i styregruppen udelukker ikke en fra undervisningen og vice versa. </p>
					</div>
				</div>
			</div>
		</div>

		<div class="container">
			<div class="row">
				@foreach (ContentModels.MedlemItem item in selectionMedlemmer)
				{
					<div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 margin-medlemmer">
						<img src="@item.MedlemBillede.Url" class="headshot img-fluid" />
						<h4>@item.Value("MedlemNavn")</h4>
						<div class="medlemmer roles">@item.Value("MedlemRolle")</div>
						<div class="medlemmer">@item.Value("MedlemUddannelse")</div>
					</div>
				}
			</div>
		</div>

	</section>
</content>

